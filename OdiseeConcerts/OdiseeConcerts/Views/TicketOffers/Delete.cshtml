@model OdiseeConcerts.Models.TicketOffer

@{
    ViewData["Title"] = "Ticket Aanbieding Verwijderen"; // Vertaald
}

<h1>@ViewData["Title"]</h1>

<h3>Weet u zeker dat u dit wilt verwijderen?</h3> <!-- Vertaald -->
<div>
    <h4>Ticket Aanbieding</h4> <!-- Vertaald -->
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumTickets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumTickets)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Concert)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Concert.Artist)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> | <!-- Vertaald -->
        <a asp-action="Index" class="btn btn-secondary">Terug naar Overzicht</a> <!-- Vertaald, met Bootstrap class -->
    </form>
</div>
