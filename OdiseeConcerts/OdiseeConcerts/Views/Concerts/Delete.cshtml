@model OdiseeConcerts.Models.Concert

@{
    ViewData["Title"] = "Concert Verwijderen"; // Vertaald
}

<h1>@ViewData["Title"]</h1>

<h3>Weet u zeker dat u dit wilt verwijderen?</h3> <!-- Vertaald -->
<div>
    <h4>Concert</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Terug naar Overzicht</a>
    </form>
</div>
