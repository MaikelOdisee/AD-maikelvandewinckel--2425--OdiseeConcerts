@model IEnumerable<OdiseeConcerts.ViewModels.ConcertViewModel>

@{
    ViewData["Title"] = "Concerten Overzicht";
}

<h1 class="my-4 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var concert in Model)
        {
            <div class="col d-flex">
                <div class="card shadow-sm w-100 rounded-lg">
                    <!-- Afbeelding van de artiest -->
                    <img src="@concert.ArtistPicture" class="card-img-top rounded-top-lg concert-artist-img" alt="" onerror="this.onerror=null;this.src='/img/nopic.png';">

                    <div class="card-body d-flex flex-column">
                        <!-- Artiest en locatie -->
                        <h5 class="card-title text-center text-truncate mb-2">@concert.Artist</h5>
                        <p class="card-text text-center text-muted text-truncate mb-3">@concert.Location</p>

                        <!-- Rode box voor de datum -->
                        <div class="d-flex justify-content-center mb-3">
                            <div class="rounded-pill p-2 text-white text-center shadow date-box-red">
                                @concert.Date.ToString("dd MMM yyyy") <!-- Datumopmaak aangepast voor duidelijkheid -->
                            </div>
                        </div>

                        <div class="mt-auto text-center">
                            <!-- Dynamische knop gebaseerd op beschikbare tickets -->
                            <!-- AANGEPAST: Linkt nu naar de Concerts/Details pagina met het Concert.Id -->
                            <a asp-action="Details" asp-route-id="@concert.Id" class="btn @concert.ButtonClass btn-lg w-75 rounded-pill shadow-sm">
                                @concert.ButtonText
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/concerts.css" asp-append-version="true" />
}
