@model OdiseeConcerts.Models.Order

@{
    ViewData["Title"] = "Details Bestelling"; // Vertaald
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Bestelling</h4> <!-- Vertaald -->
    <hr />
    <dl class="row">
        @* Het UserName veld is hier verwijderd, aangezien het niet langer deel uitmaakt van het Order model. *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumTickets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumTickets)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountApplied)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiscountApplied)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketOffer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketOffer.TicketType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email) <!-- Toont e-mail van gebruiker i.p.v. alleen ID -->
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Bewerken</a> | <!-- Vertaald en styling toegevoegd -->
    <a asp-action="Index" class="btn btn-secondary">Terug naar Overzicht</a> <!-- Vertaald en styling toegevoegd -->
</div>