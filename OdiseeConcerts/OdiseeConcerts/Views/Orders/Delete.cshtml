@model OdiseeConcerts.Models.Order

@{
    ViewData["Title"] = "Bestelling Verwijderen"; // Vertaald
}

<h1>@ViewData["Title"]</h1>

<h3>Weet u zeker dat u dit wilt verwijderen?</h3> <!-- Vertaald -->
<div>
    <h4>Bestelling</h4> <!-- Vertaald -->
    <hr />
    <dl class="row">
        @* Het UserName veld is hier verwijderd, aangezien het niet langer deel uitmaakt van het Order model. *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumTickets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumTickets)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountApplied)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiscountApplied)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketOffer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketOffer.TicketType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email) <!-- Toont e-mail van gebruiker i.p.v. alleen ID -->
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> | <!-- Vertaald -->
        <a asp-action="Index" class="btn btn-secondary">Terug naar Overzicht</a> <!-- Vertaald, met Bootstrap class -->
    </form>
</div>

